{% extends 'MisionSucreRipesBundle::layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{asset('css/form/responsiveform.css')}}">
	<link rel="stylesheet" media="screen and (max-width: 1200px) and (min-width: 601px)" href="{{asset('css/form/responsiveform1.css')}}" />
	<link rel="stylesheet" media="screen and (max-width: 600px) and (min-width: 351px)" href="{{asset('css/form/responsiveform2.css')}}" />
	<link rel="stylesheet" media="screen and (max-width: 350px)" href="{{asset('css/form/responsiveform3.css')}}" />
{% endblock %}

{% block content %}


    
	<div id="envelope">
	<header>
	    <h2>{{mensaje_heading | raw}}</h2>
	    <p>{{sub_heading | raw}}</p>
	</header>
	<hr>
	
        
        {{ form_start(form) }}
	
        <div>
		{{ form_label(form.norte) }}
		{{ form_widget(form.norte) }}
                {% if form_errors(form.norte) %}
                    <div class="error">
                        ERROR: Las Coordenadas deben ser un Número Válido
                    </div>
                {% endif %}
	</div>
        
        <div>
		{{ form_label(form.oeste) }}
		{{ form_widget(form.oeste) }}
                {% if form_errors(form.oeste) %}
                    <div class="error">
                        ERROR: Las Coordenadas deben ser un Número Válido
                    </div>
                {% endif %}
	</div>
        
                
        <div>
		{{ form_widget(form.save) }}
	</div>
		{{ form_end(form) }}		
</div>

<script>    
    
$(document).ready(function(){

$('#form_norte').keypress( function (event) {

    return event.charCode >= 48 && event.charCode <= 57  || event.charCode ==0  || event.charCode ==45 || event.charCode ==46 || event.charCode ==45;
});

});

</script>
                
{% endblock %}

