{% extends 'MisionSucreRipesBundle::layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{asset('css/form/responsiveform.css')}}">
	<link rel="stylesheet" media="screen and (max-width: 1200px) and (min-width: 601px)" href="{{asset('css/form/responsiveform1.css')}}" />
	<link rel="stylesheet" media="screen and (max-width: 600px) and (min-width: 351px)" href="{{asset('css/form/responsiveform2.css')}}" />
	<link rel="stylesheet" media="screen and (max-width: 350px)" href="{{asset('css/form/responsiveform3.css')}}" />
{% endblock %}

{% block content %}

	<div id="envelope">
	<header>
	    <h2>{{mensaje_heading}}</h2>
	    <p>{{sub_heading}}</p>
	</header>
	<hr>
	{{ form_start(form) }}
	
        <div>
            {{ form_label(form.cargo) }}
            {{ form_widget(form.cargo) }}
            <div class="error">
                    {{ form_errors(form.cargo) }}
            </div>
        </div>
        
        <div>
            {{ form_label(form.institucion) }}
            {{ form_widget(form.institucion) }}
            <div class="error">
                    {{ form_errors(form.institucion) }}
            </div>
        </div>
        
        <div>
            {{ form_label(form.turno) }}
	<div class="styled">
            {{ form_widget(form.turno) }}
	</div>
            <div class="error">
                    {{ form_errors(form.turno) }}
            </div>
        </div>
            
        <div>
            {{ form_label(form.jubilacion) }}
            {{ form_widget(form.jubilacion) }}
            <div class="error">
                    {{ form_errors(form.jubilacion) }}
            </div>
        </div>
            
        <div>
            {{ form_label(form.condicionlaboral) }}
            {{ form_widget(form.condicionlaboral) }}
            <div class="error">
                    {{ form_errors(form.condicionlaboral) }}
            </div>
        </div>
            
        <div>
            {{ form_label(form.antiguedad) }}
            {{ form_widget(form.antiguedad) }}
            <div class="error">
                    {{ form_errors(form.antiguedad) }}
            </div>
        </div>
            
	<div>
		{{ form_widget(form.save) }}
	</div>
		{{ form_end(form) }}		
</div>

{% endblock %}

