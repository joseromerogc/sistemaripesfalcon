{% extends 'MisionSucreRipesBundle::layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{asset('css/form/responsiveform.css')}}">
	<link rel="stylesheet" media="screen and (max-width: 1200px) and (min-width: 601px)" href="{{asset('css/form/responsiveform1.css')}}" />
	<link rel="stylesheet" media="screen and (max-width: 600px) and (min-width: 351px)" href="{{asset('css/form/responsiveform2.css')}}" />
	<link rel="stylesheet" media="screen and (max-width: 350px)" href="{{asset('css/form/responsiveform3.css')}}" />
{% endblock %}

{% block content %}

	<div id="envelope">
	<header>
	    <h2>{{mensaje_heading}}</h2>
	    <p>{{sub_heading}}</p>
	</header>
	<hr>
	{{ form_start(form) }}
	<div>
		{{ form_label(form.cant_hij) }}
		{{ form_widget(form.cant_hij) }}
                <div class="error">
                    {{ form_errors(form.cant_hij) }}
                </div>
	</div>
	
        <div>
            {{ form_label(form.tipo_viv) }}
	<div class="styled">
            {{ form_widget(form.tipo_viv) }}
	</div>
            <div class="error">
                    {{ form_errors(form.tipo_viv) }}
            </div>
        </div>
            
        <div>
            {{ form_label(form.ayuda) }}
	<div class="styled">
            {{ form_widget(form.ayuda) }}
	</div>
            <div class="error">
                    {{ form_errors(form.ayuda) }}
            </div>
        </div>
        <div>
            {{ form_label(form.ing_fam) }}
	<div class="styled">
            {{ form_widget(form.ing_fam) }}
	</div>
            <div class="error">
                    {{ form_errors(form.ing_fam) }}
            </div>
        </div>
            
        <div>
            {{ form_label(form.religion) }}
	<div class="styled">
            {{ form_widget(form.religion) }}
	</div>
            <div class="error">
                    {{ form_errors(form.religion) }}
            </div>
        </div>
	<div>
		{{ form_widget(form.save) }}
	</div>
		{{ form_end(form) }}		
</div>
<script>    
    
$(document).ready(function(){


$('#social_cant_hij').keypress( function (event) {

    return event.charCode >= 48 && event.charCode <= 57  || event.charCode ==0  ||event.charCode ==45;
});

});

</script>		
{% endblock %}

