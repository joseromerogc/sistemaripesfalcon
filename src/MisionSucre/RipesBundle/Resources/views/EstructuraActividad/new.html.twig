{% extends 'MisionSucreRipesBundle::layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{asset('css/form/responsiveform.css')}}">
	<link rel="stylesheet" media="screen and (max-width: 1200px) and (min-width: 601px)" href="{{asset('css/form/responsiveform1.css')}}" />
	<link rel="stylesheet" media="screen and (max-width: 600px) and (min-width: 351px)" href="{{asset('css/form/responsiveform2.css')}}" />
	<link rel="stylesheet" media="screen and (max-width: 350px)" href="{{asset('css/form/responsiveform3.css')}}" />
        <link rel="stylesheet" type="text/css" href="{{asset('css/table/littletable.css')}}">
{% endblock %}

{% block content %}

{% for f in form %}
                {% if f.vars.block_prefixes[0]!="button" %}
                    <div class="flash-notice">
                        {{f.vars.errors}}
                    </div>
                {% endif %}
    {% endfor %}
    
	<div id="envelope">
	<header>
	    <h2>{{mensaje_heading | raw}}</h2>
	    <p>{{sub_heading | raw}}</p>
	</header>
	<hr>
	
        
        {{ form_start(form) }}
	
         <h1 class="sub_heading_style">Estructura</h1> 
        <table cellspacing='0' style='margin-left: 10%;' > <!-- cellspacing='0' is important, must stay -->
            <tr><th>ID</th><th>Nombre</th><th>Aldea</th><th>Tipo</th></tr>
            
            <td>{{str.id}}</td><td>{{str.nombre}}</td>
            <td>{{str.tipo}}</td><td>{{str.aldea.nombre}}</td>
        </tr><!-- Table Row -->
        </table>
        
        <div>
		{{ form_label(form.fecha) }}
		{{ form_widget(form.fecha) }}
                 
                <div class="error">
                    {{ form_errors(form.fecha) }}
                </div>
	</div>
                
        <div>
		{{ form_label(form.nombre) }}
		{{ form_widget(form.nombre) }}
                <div class="error">
                    {{ form_errors(form.nombre) }}
                </div>
	</div>        
        <div>
		{{ form_label(form.lugar) }}
		{{ form_widget(form.lugar) }}
                <div class="error">
                    {{ form_errors(form.lugar) }}
                </div>
	</div>        
        
        <div>
		{{ form_label(form.objetivo) }}
		{{ form_widget(form.objetivo) }}
                <div class="error">
                    {{ form_errors(form.objetivo) }}
                </div>
	</div>
                
        <div>
		{{ form_label(form.idresponsable) }}
                <div class="styled">
		{{ form_widget(form.idresponsable) }}
                </div>
                <div class="error">
                    {{ form_errors(form.idresponsable) }}
                </div>
	</div>
        
        <div>
		{{ form_label(form.cumplimiento) }}
                <div class="styled">
		{{ form_widget(form.cumplimiento) }}
                </div>
                <div class="error">
                    {{ form_errors(form.cumplimiento) }}
                </div>
	</div>
                
        <div>
		{{ form_label(form.observacion) }}
		{{ form_widget(form.observacion) }}
                <div class="error">
                    {{ form_errors(form.observacion) }}
                </div>
	</div>
               
        <div>
		{{ form_widget(form.save) }}
	</div>
		{{ form_end(form) }}		
</div>
               
{% endblock %}

