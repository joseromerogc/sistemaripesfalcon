{% extends 'MisionSucreRipesBundle::layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{asset('css/table/littletable.css')}}">
        <link rel="stylesheet" type="text/css" href="{{asset('css/blitzer/jquery-ui-1.10.4.custom.css')}}">
{% endblock %}

{% block js %}
        {{ parent() }}
	<script src="{{asset('js/jquery-ui-1.10.4.custom.js')}}"></script>
        <script>
            $(function() {
		$( "#accordion" ).accordion({
                heightStyle: "content",        
                collapsible: true,
                active: false
                }        );            
            });            
            
        </script>
{% endblock %}    

{% block content %}
	{{ parent() }}

        
{% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
        {{ flashMessage }}
        </div>
{% endfor %}
<h1 class="heading_style">Resumen de Triunfadores</h1> 
<div id="accordion">
  
      <h3> Municipio</h3>
        <div>
    <table cellspacing='0'  style="display: inline"> <!-- cellspacing='0' is important, must stay -->
        <tr > <th class="heading" colspan='7'> Cantidad de Triunfadores por Municipio</th></tr>
            <tr>
                <th>Municipio</th><th>Cantidad de Triunfadores</th><th>No Vinculados al Sistema</th>                      
            </tr><!-- Table Header -->
{% set cont = 0 %} 
{% set contnv =  0%} 
    {% for ca in cxmunicipios%}
        {% set porcnv= (ca.cantidadnovinculados*(100/ca.cantidadtriunfadores))%} {#porcentaje de no vinculados#}
            {% if porcnv >50 %}
            {% set class="rojosuave"%}
            {% else%}
            {% set class=""%}
            {% endif%}
        <tr class="{{class}}" >
            <td>{{ca.municipio}}</td>
            <td>{{ca.cantidadtriunfadores}}</td>
            <td >{{ca.cantidadnovinculados}}({{ porcnv|round(0, 'ceil')}}%)</td>
                    {% set cont = cont+ ca.cantidadtriunfadores%}
                    {% set contnv = contnv +  ca.cantidadnovinculados%} 
        </tr><!-- Table Row -->
    {% endfor%}
    
    <td class = 'total'>Total</td><td>{{cont}}</td><td>{{contnv}}({{(contnv*(100/cont))|round(0,'ceil')}}%)</td>
    </table>
    
    <div id="container2" style="margin: 30px 0 50px 0"></div>
    
       </div>
      <h3>Aldeas</h3>
        <div>
    <table cellspacing='0'> <!-- cellspacing='0' is important, must stay -->
        <tr > <th class="heading" colspan='7'> Cantidad de Triunfadores por Aldea</th></tr>
            <tr>
                <th>Aldeas</th><th>Cantidad de Triunfadores</th><th>No Vinculados al Sistema</th>           
            </tr><!-- Table Header -->
    {% set conttrf = 0 %}  
    {% set contnv =  0%} 
    {% for ca in cxaldeas%}
        {% set porcnv= (ca.cantidadnovinculados*(100/ca.cantidadtriunfadores))%} {#porcentaje de no vinculados#}
            {% if porcnv >50 %}
            {% set class="rojosuave"%}
            {% else%}
            {% set class=""%}
            {% endif%}
        <tr class="class">
            <td>{{ca.nombre}}</td>
            <td>{{ca.cantidadtriunfadores}}</td>
            <td >{{ca.cantidadnovinculados}}({{ porcnv|round(0, 'ceil')}}%)</td>
            {% set conttrf = conttrf+ ca.cantidadtriunfadores%}
            {% set contnv = contnv +  ca.cantidadnovinculados%}
        </tr><!-- Table Row -->
    {% endfor%}
    <td class = 'total'>Total</td><td>{{conttrf}}</td><td>{{contnv}}({{(contnv*(100/conttrf))|round(0,'ceil')}}%)</td>
    </table>
    
    <div id="container3" style="width: 70%;"></div>
        </div>
    </div>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/highcharts-3d.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<script>    
    
$(document).ready(function(){
    
$(function () {
    $('#container2').highcharts({
        chart: {
            type: 'pie',
            options3d: {
                enabled: true,
                alpha: 45,
                beta: 0
            }
        },
        title: {
            text: 'Triunfadores por Municipio '
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.0f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                depth: 35,
                dataLabels: {
                    enabled: true,
                    format: '{point.name}'
                }
            }
        },
        series: [{
            type: 'pie',
            name: 'Cantidad de Triunfadores',
            data: [
                {% for ca in cxmunicipios%}
                    ['{{ca.municipio}}',{{ca.cantidadtriunfadores}}],
                {% endfor%} 
            ]
        }]
    });
});

$(function () {
    $('#container3').highcharts({
         chart: {
            type: 'column'
        },
        title: {
            text: 'Triunfadores por Aldea'
        },
        xAxis: {
            type: 'category',
            labels: {
                rotation: -45,       
                style: {
                    fontSize: '13px',
                    fontFamily: 'Verdana, sans-serif'
                }
        },
        yAxis: {
            title: {
                text: 'Porcentaje',
                }
            }

        },
        legend: {
            enabled: false
        },
        plotOptions: {
            series: {
                borderWidth: 0,
                dataLabels: {
                    enabled: true,
                    format: '{point.y:.1f}%'
                }
            }
        },

        tooltip: {
            headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
            pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}%</b> del Total<br/>'
        },
        series: [{
            name: 'Cantidad de Triunfadores',
            data: [
               {% for ca in cxaldeas%}    
                    ["{{ca.nombre}}",{{(ca.cantidadtriunfadores/conttrf)*100}}],
                {% endfor%} 
            ]
        }]
    });
});

});

</script>
{% endblock %}
